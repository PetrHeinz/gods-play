{
  "name": "gods-play",
  "version": "0.1.0",
  "description": "Browser single-machine multiplayer turn-base game built in JS played on a hexagonal grid. Basically about fighting wizards.",
  "keywords": [
    "game",
    "javascript",
    "hexagons",
    "wizards",
    "magic",
    "turn-base",
    "multi-player"
  ],
  "author": "Petr Heinz <noobos@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/PetrHeinz/gods-play#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-preset-env": "^1.2.1",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "download-cli": "^1.0.1",
    "watchify": "^3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PetrHeinz/gods-play.git"
  },
  "bugs": {
    "url": "https://github.com/PetrHeinz/gods-play/issues"
  },
  "scripts": {
    "build": "browserify --debug -r ./src/gods-play.js:gods-play -o js/gods-play.js",
    "watch": "watchify --debug -r ./src/gods-play.js:gods-play -o js/gods-play.js",
    "libs-update": "download https://pixijs.download/release/pixi.js https://pixijs.download/release/pixi.js.map --out ./js/libs"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
